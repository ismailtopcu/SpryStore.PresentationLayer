@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<style>
    img{
        border-radius:50%;
    }
</style>

<h1>Kullanıcı Listesi</h1>

<table class="table table-hower">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyadı</th>
        <th>Şehir</th>
        <th>Detaylar</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Roller</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><img src="@item.ImageUrl" height="50" width="50" /></td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/User/AssignRole/@item.Id" class="btn btn-outline-warning">Roller</a></td>
        </tr>
    }
</table>
