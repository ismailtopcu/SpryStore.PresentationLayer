@model UpdateRoleViewModel
 
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
 
<h1>Rol Güncelleme Sayfası</h1>
 
<form method="post">
    <input type="hidden" asp-for="RoleId" />
    <label>Rol Adı</label>
    <input type="text" class="form-control" asp-for="RoleName" />
    <br />
    <button class="btn btn-outline-primary">Rolü Güncelle</button>
</form>

