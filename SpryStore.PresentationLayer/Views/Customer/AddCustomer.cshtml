@model Customer
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form method="post">
    <label>Müşteri Adı</label>
    <input type="text" class="form-control" asp-for="CustomerName"/>
    <br />
    <label>Müşteri Soyadı</label>
    <input type="text" class="form-control" asp-for="CustomerSurname"/>
    <br />
    <label>Müşteri Mail</label>
    <input type="email" class="form-control" asp-for="CustomerMail"/>
    <br />
    <label>Müşteri Şehir</label>
    <input type="text" class="form-control" asp-for="CustomerCity"/>
    <br />
    <button class="btn btn-info">Müşteri Ekle</button>
</form>

